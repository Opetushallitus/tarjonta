<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:cxf="http://cxf.apache.org/core"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
       http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd
       ">

    <!--
        NOTE: remove this file when the architech team comes up with a solution for the production (Camel route maybe).
    -->
    <jaxws:client id="koodiPublicService"
                  serviceClass="fi.vm.sade.koodisto.service.KoodiService"
                  address="${koodi.webservice.url}">
    </jaxws:client>

    <jaxws:client id="tarjojaPublicService"
                  serviceClass="fi.vm.sade.tarjoaja.service.KoulutustarjoajaPublicService"
                  address="${koulutustarjoaja.webservice.url}">
    </jaxws:client>

    <!-- wrapper service that uses koodisto webservice for content -->
    <bean id="koodistoLookupService" class="fi.vm.sade.tarjonta.publication.enricher.koodisto.KoodistoLookupWebServiceImpl"/>

    <!-- wrapper service that uses tarjoaja webservice for content -->
    <bean id="tarjoajaLookupService" class="fi.vm.sade.tarjonta.publication.enricher.organisaatio.KoulutustarjoajaLookupWebServiceImpl"/>

    <!-- factory that knows how to create enricher for publication data -->
    <bean id="xmlEnricher" class="fi.vm.sade.tarjonta.publication.enricher.factory.LearningOpportunityDataEnricherFactory">
        <property name="failOnKoodistoError" value="false"/>
    </bean>

    <!-- servlet filter that enriches the xml. in reality this would be a filter along an ESB route -->
    <bean id="tarjontaEnrichingFilter" class="fi.vm.sade.tarjonta.servlet.PublicationEnrichingFilter">
    </bean>
    
</beans>
