<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>fi.vm.sade.tarjonta</groupId>
    <artifactId>tarjonta</artifactId>
    <version>6.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Tarjonta :: Parent</name>

    <parent>
        <groupId>fi.vm.sade.generic</groupId>
        <artifactId>build-parent</artifactId>
        <version>6.1-SNAPSHOT</version>
    </parent>

    <properties>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
      <project.build.resourceEncoding>UTF-8</project.build.resourceEncoding>
      <organisaatio.api.version>6.1-SNAPSHOT</organisaatio.api.version>
      <authentication.api.version>6.1-SNAPSHOT</authentication.api.version>
      <generic.version>6.1-SNAPSHOT</generic.version>
      <vaadin.theme.version>6.1-SNAPSHOT</vaadin.theme.version>
      <koodisto.api.version>6.1-SNAPSHOT</koodisto.api.version>
      <koodisto.widget.version>6.1-SNAPSHOT</koodisto.widget.version>
      <oid.api.version>6.1-SNAPSHOT</oid.api.version>
      <log.version>6.1-SNAPSHOT</log.version>
    </properties>

    <modules>
        <module>tarjonta-api</module>
        <module>tarjonta-shared</module>
        <module>tarjonta-publication-api</module>
        <module>tarjonta-enricher</module>
        <module>tarjonta-service</module>
        <module>tarjonta-app</module>
    </modules>
    
    <repositories>
       <repository>
            <id>oph-sade-artifactory-snapshots</id>
            <url>http://penaali.hard.ware.fi/artifactory/oph-sade-snapshot-local</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>oph-sade-artifactory-releases</id>
            <url>http://penaali.hard.ware.fi/artifactory/oph-sade-release-local</url>
        </repository>
    </repositories>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>1.2</version>
                <executions>
                    <execution>
                        <id>enforce-java</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireJavaVersion>
                                    <version>[1.6,1.7)</version>
                                </requireJavaVersion>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
