    <artifactId>tarjonta</artifactId>
    <version>2016-07_BUG-930_hakutoimiston_nimi_mukaan_liiteosoitteeseen-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Tarjonta :: Parent</name>

    <parent>
        <groupId>fi.vm.sade.generic</groupId>
        <artifactId>build-parent</artifactId>
        <version>15.0-SNAPSHOT</version>
    </parent>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.build.resourceEncoding>UTF-8</project.build.resourceEncoding>
        <organisaatio.api.version>2015-13</organisaatio.api.version>
        <organisaatio.solr.version>13.0</organisaatio.solr.version>
        <authentication.api.version>10.0-SNAPSHOT</authentication.api.version>
        <generic.version>9.4-SNAPSHOT</generic.version>
        <httpcomponents.version>4.2.5</httpcomponents.version>
        <vaadin.theme.version>6.2</vaadin.theme.version>
        <koodisto.api.version>10.0-SNAPSHOT</koodisto.api.version>
        <koodisto.widget.version>10.0-SNAPSHOT</koodisto.widget.version>
        <log.version>8.0</log.version>
        <oid.version>8.0-SNAPSHOT</oid.version>
        <postgresql.version>9.4.1209</postgresql.version>
    </properties>

    <modules>
        <module>tarjonta-api</module>
        <!--        <module>tarjonta-publication-api</module> -->
        <module>tarjonta-shared</module>
        <module>tarjonta-service</module>
        <module>tarjonta-app-angular</module>
        <module>tarjonta-app</module>

    </modules>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.8</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <webResources>
                        <resource>
                            <directory>../src/main/resources</directory>
                            <targetPath>WEB-INF/classes</targetPath>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-enforcer-plugin</artifactId>
               <version>1.4.1</version>
              <executions>
                <execution>
                  <id>enforce-versions</id>
                  <goals>
                    <goal>enforce</goal>
                  </goals>
                  <configuration>
                    <rules>
                      <requireJavaVersion>
                        <version>[1.7,1.9)</version>
                      </requireJavaVersion>
                    </rules>
                  </configuration>
                </execution>
              </executions>
            </plugin>
            <plugin>
                <inherited>true</inherited>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>oph-sade-artifactory</id>
            <name>oph-sade-artifactory-3rd-party</name>
            <url>https://artifactory.oph.ware.fi/artifactory/libs-3rd-party</url>
        </repository>
        <repository>
            <id>oph-sade-artifactory-snapshots</id>
            <url>https://artifactory.oph.ware.fi/artifactory/oph-sade-snapshot-local</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </repository>
        <repository>
            <id>oph-sade-artifactory-releases</id>
            <url>https://artifactory.oph.ware.fi/artifactory/oph-sade-release-local</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>

        </repository>

    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>oph-sade-artifactory</id>
            <name>oph-sade-artifactory-releases</name>
            <url>https://artifactory.oph.ware.fi/artifactory/libs-3rd-party</url>

        </pluginRepository>
    </pluginRepositories>
