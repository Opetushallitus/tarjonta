<?xml version="1.0" encoding="UTF-8"?>

<LearningOpportunityData
    xmlns="http://service.tarjonta.sade.vm.fi/types"
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:schemaLocation='http://service.tarjonta.sade.vm.fi/types  ../../main/resources/wsdl/learningUploadService.xsd' xmlns:http="null">

    <!--
        koulutusmoduuli jossa:
        - attribuutti id on uniikki tässä dokumentissa, käyttö ainoastaan rakenteen luomiseen
    -->
    <LearningOpportunitySpecification id="LOS1" type="DegreeProgramme">


        <!-- nimi voi toistua n-kertaa eri kielille -->
        <Name xml:lang="fi">Tuotantotalouden koulutusohjelma</Name>

        <Identifier>LOS1</Identifier>

        <!-- viittaus LOP:iin joka tarjoaa "tarjoaa" tämän koulutus moduulin -->
        <OfferedBy ref="LOP1"/>

        <!-- laajuus yksikkö sekä arvo -->
        <Credits unit="CreditUnits">30</Credits>


        <!-- tutkintonimike -->
        <Qualification>
            <Title>Tuotantotalouden mestari</Title>
        </Qualification>

        <Classification>

            <ClassificationCode scheme="http://oph.fi">
                <Value>123456</Value>
            </ClassificationCode>

            <!-- tutkinnon EQF luokittelu (arvot 1-8) -->
            <ClassificationCode scheme="NQF">
                <Value>6</Value>
            </ClassificationCode>

        </Classification>

        <Description>
            <!-- koulutusrakenteen kuvaus -->
            <StructureDiagram>
                Tekstiä...
            </StructureDiagram>
        </Description>

        <!--
            sisältyvät moduulit, selector arvo "allOf" määrää että kaikki ovat pakollisia.
            viittaukset ovat tämän dokumentin sisäisiä.
            structure -rakenne voi toistua 0-n kertaa
        -->
        <Structure selector="allOf">
            <SpecificationRef ref="LOS2"/>
            <SpecificationRef ref="LOS3"/>
        </Structure>

    </LearningOpportunitySpecification>


    <!-- Koulutusmoduuli johon päätasolta viitataan -->
    <LearningOpportunitySpecification id="LOS2" type="DegreeProgramme">
        <Identifier>LOS2</Identifier>
        <Classification>
            <ClassificationCode scheme="http://stat.fi" version="2010">
                <Value>374116</Value>
                <Label xml:lang="fi">Sairaankuljettajan ammattitutkinto</Label>
            </ClassificationCode>
        </Classification>
    </LearningOpportunitySpecification>

    <!-- Koulutusmoduuli johon päätasolta viitataan -->
    <LearningOpportunitySpecification id="LOS3" type="DegreeProgramme">
        <Identifier>LOS3</Identifier>

        <Classification>
            <ClassificationCode category="EducationDomain" scheme="http://oph.fi" version="2002">
                <Value>7</Value>
                <Label>Sosiaali-, terveys- ja liikunta-ala</Label>
            </ClassificationCode>
            <ClassificationCode category="EducationDegree" scheme="http://oph.fi" version="2002">
                <Value>32</Value>
                <Label>Ammatillinen koulutus</Label>
            </ClassificationCode>
            <ClassificationCode category="StydyDomain" scheme="http://oph.fi" version="2002">
                <Value>1</Value>
                <Label>Sosiaaliala</Label>
            </ClassificationCode>
        </Classification>

    </LearningOpportunitySpecification>


    <LearningOpportunityProvider id="LOP1">

        <!-- instituutiotietoja ryhmittelevä rakenne -->
        <Institution>
            <Name xml:lang="fi">nimi</Name>
            <Name xml:lang="en">name</Name>
            <Name xml:lang="sv">namn</Name>
            <AcademicCalendar></AcademicCalendar>
            <AcademicAuthorities></AcademicAuthorities>
            <AdmissionProcedures></AdmissionProcedures>
            <GeneralDescription></GeneralDescription>
            <EctsCoordinator></EctsCoordinator>

            <MainUniversityRequlations xml:lang="fi">
                sääntöjä...
            </MainUniversityRequlations>
            <MainUniversityRequlations xml:lang="en">
                regulations...
            </MainUniversityRequlations>
        </Institution>

        <!-- yleisiä tietoja ryhmittelevä rakenne -->
        <GeneralInformation>
            <CostOfLiving></CostOfLiving>
            <Meals></Meals>
            <MedicalFacilities></MedicalFacilities>
            <FacilitiesForStudentsWithSpecialNeeds></FacilitiesForStudentsWithSpecialNeeds>
            <Insurance></Insurance>
            <FinancialSupport></FinancialSupport>
            <StudentAffairsOffice></StudentAffairsOffice>
            <StudyFacilities></StudyFacilities>
            <InternationalProgrammes></InternationalProgrammes>
            <MobileStudents></MobileStudents>
            <LanguageCourses></LanguageCourses>
            <Internships></Internships>
            <SportsFacilities></SportsFacilities>
            <ExtraMuralAndLeisureFacilities>
            </ExtraMuralAndLeisureFacilities>
            <StudentAssociations xml:lang="fi"><![CDATA[
                Lisätietoja osoitteesta
                <a href="http://ayy.fi/">http://ayy.fi</a>
                ]]>
            </StudentAssociations>
            <StudentAssociations xml:lang="en"><![CDATA[
                More information at
                <a href="http://ayy.fi/">http://ayy.fi</a>
                ]]>
            </StudentAssociations>
        </GeneralInformation>
    </LearningOpportunityProvider>


    <!-- hakukohteet 0-n kappaletta -->

    <ApplicationTarget>

        <Identifier>1.2.3.4.5</Identifier>

        <Title>yleishaku</Title>

        <ApplicationSystemRef>
            <OidRef>11.2.4.5.6</OidRef>
        </ApplicationSystemRef>

        <EligibilityRequirements>
            <Description>foobar</Description>
        </EligibilityRequirements>

        <SelectionCriterions>
            <StartingQuota>0</StartingQuota>
        </SelectionCriterions>

        <!-- koulukset joihin tässä hakukohteessa voidaan hakea -->
        <LearningOpportunities>
            <InstanceRef ref="LOS1"/>
            <InstanceRef ref="LOS2"/>
        </LearningOpportunities>

    </ApplicationTarget>

</LearningOpportunityData>
