<portlet-app
    xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
    version="1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd
                        http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

    <!-- TARJONTA PORTLET -->
    <portlet>
        <description></description>
        <portlet-name>TarjontaPortletApplication</portlet-name>
        <display-name>TarjontaPortletApplication</display-name>

        <portlet-class>com.vaadin.terminal.gwt.server.ApplicationPortlet2</portlet-class>

        <init-param>
            <name>application</name>
            <value>fi.vm.sade.tarjonta.ui.TarjontaPortletApplication</value>
        </init-param>
        <init-param>
            <name>widgetset</name>
            <value>fi.vm.sade.widgetset.OPH</value>
        </init-param>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>edit</portlet-mode>
            <portlet-mode>help</portlet-mode>
        </supports>

        <portlet-info>
            <title>TarjontaPortletApplication</title>
            <short-title>TarjontaPortletApplication</short-title>
            <keywords></keywords>
        </portlet-info>
        
        <security-role-ref>
            <role-name>APP_TARJONTA_CRUD</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>APP_TARJONTA_READ_UPDATE</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>APP_TARJONTA_READ</role-name>
        </security-role-ref>
    </portlet>

