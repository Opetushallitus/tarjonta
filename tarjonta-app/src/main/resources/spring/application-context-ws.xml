<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:cxf="http://cxf.apache.org/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd">

    <!-- Bean configuration for interceptor & callback -->
    
    <bean id="ticketInterceptor" class="fi.vm.sade.generic.ui.portlet.security.SecurityTicketOutInterceptor">
        <property name="callback" ref="callback" />
    </bean>

    <bean id="callback" class="fi.vm.sade.generic.ui.app.LiferaySecurityTicketCallback">

    </bean>

    <!-- Configure CXF bus to contain ticketInterceptor -->
    <cxf:bus>
        <cxf:outInterceptors>
            <ref bean="ticketInterceptor" />
        </cxf:outInterceptors>
    </cxf:bus>
 	

  <jaxws:client id="oidService"
                  serviceClass="fi.vm.sade.oid.service.OIDService"
                  address="${oid.webservice.url:http://NO_OID_WEBSERVICE_URL_CONFIGURED}"/>

    <bean class="fi.vm.sade.koodisto.widget.factory.WidgetFactory" />
    
    <jaxws:client id="oidService"
                      serviceClass="fi.vm.sade.oid.service.OIDService"
                      address="${oid.webservice.url:http://NO_OID_WEBSERVICE_URL_CONFIGURED}"/>

    <jaxws:client id="hakuService"
                     serviceClass="fi.vm.sade.tarjonta.service.HakuService"
                     address="${tarjonta.haku.webservice.url:http://NO_HAKU_WEBSERVICE_URL_CONFIGURED}"/> 
     
    <jaxws:client id="organisaatioService"
                   serviceClass="fi.vm.sade.organisaatio.api.model.OrganisaatioService"
                   address="${organisaatio.webservice.url:http://NO_ORGANISAATIO_WEBSERVICE_URL_CONFIGURED}"/> 


</beans>
